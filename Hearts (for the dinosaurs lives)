float hx, hy;
float scl;

void setup() {
  size(400, 400);
  background(255);
}

void draw() {
  heart();
}

void heart(){
  smooth();
  noStroke();
  fill(222, 40, 77, 180);
  beginShape();
  vertex(50, 15); 
  bezierVertex(50, -5, 90, 5, 50, 40); 
  vertex(50, 15); 
  bezierVertex(50, -5, 10, 5, 50, 40); 
  endShape();
}
